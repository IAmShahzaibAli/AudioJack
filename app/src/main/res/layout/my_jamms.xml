<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="130sp"
       android:background="#464646"
       android:id="@+id/libraryToplayout"

       >

       <Button
           android:layout_width="190sp"
           android:layout_height="wrap_content"
           android:text="LOG IN / SIGN UP"
           android:textAllCaps="true"
           android:id="@+id/LibraryLogin_Btn"
           android:layout_marginLeft="90sp"
           android:layout_marginTop="40sp"
           android:background="@color/ButtonsColor"
           />

   </RelativeLayout>
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_below="@+id/libraryToplayout"
        android:id="@+id/LibraryButtonToolbar_id"
        >



        <Button
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@drawable/ic_settings_black_24dp"
            android:layout_gravity="right"
            android:layout_marginRight="10sp"
            android:id="@+id/LibraryViewlistButton_id"
            />




    </android.support.v7.widget.Toolbar>
    <android.support.design.widget.TabLayout
        android:layout_width="wrap_content"
        android:layout_below="@id/LibraryButtonToolbar_id"
        android:layout_height="wrap_content"
        android:background="@color/silver"
        app:tabTextColor="#fff"
        app:tabMode="scrollable"
        android:contextClickable="true"
        android:id="@+id/libraryTablayout_id"

        />
    <android.support.v4.view.ViewPager
        android:layout_below="@id/libraryTablayout_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/libraryViewpager_id"
        />

</RelativeLayout>